<%= form_for @task do |f| %>

  <div class="form-group">
    <%= f.label :title, "Enter a title" %>
    <%= f.text_field :title, class: 'form-control'  %>
  </div>

  <div class="form-group">
    <%= f.label :details, "Enter the details" %>
    <%= f.text_field :details, class: 'form-control' %>
  </div>

  <% if @task.persisted? %>
    <div class="form-check form-group">
      <%= f.check_box :completed, class: 'form-check-input' %>
      <%= f.label :completed, class: 'form-check-label' %>
    </div>
  <% end %>

  <%= f.submit class: "mt-3 btn btn-primary" %>
<% end %>
